<div class="container my-5">
  <div class="row my-3">
    <h4>配送先登録/追加</h4>
  </div>
  <div class="row my-1">
      <div class="col-3">
        <p>郵便番号（ハイフンなし）</p>
      </div>
       <div class="col-9">
      <%= form_with model:@address, url:addresses_path,local:true do |f|%>
       <%= f.text_field :postal_code%>
      </div>
  </div>
  <div class="row my-1">
      <div class="col-3">
        <p>住所</p>
      </div>
       <div class="col-9">
        <%= f.text_field :address,class:"form-control"%>
      </div>
  </div>
  <div class="row my-1">
      <div class="col-3">
        <p>宛名</p>
      </div>
       <div class="col-6">
        <%= f.text_field :name%>
      </div>
      <div class="col-3">
        <p><%= f.submit "新規登録",class:"btn btn-success btn-sm text-white text-center"%></p>
      </div>
  </div>
  <% end %>
  <div class="row my-5">
    <dic class="col-4">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <% @addresses.each do |address|%>
      <%= form_with model:address, url:address_path(address.id),method: :delete,local:true do |f|%>
      <tr>
        <td><%=address.postal_code%></td>
        <td><%=address.address%></td>
        <td><%=address.name%></td>
        <td>
          <%= link_to "編集する" , edit_address_path(address.id),class:"btn btn-success btn-sm text-white text-center ml-5"%>
        　<%= f.submit "削除",class:"btn btn-success btn-sm text-white text-center"%>
        </td>
      </tr>
      <%end %>
      <%end %>
    </table>
    </dic>
  </div>
</div>


