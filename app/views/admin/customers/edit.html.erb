<div class="container mt-3">
      <div class="row my-4">
          <%= form_with model:@customer, url:admin_customer_path,method: :patch,local:true do |f| %>
          <h4><%="#{@customer.last_name}#{@customer.first_name}"%>さんの会員詳細</h4>
      </div>
      <div class="row my-4">
          <div class="col-2">
             <p>会員ID</p>
          </div>
          <div class="d-flex flex-row">
            <div>
              <%= @customer.id %>
            </div>
          </div>
      </div>

      <div class="row my-4">
          <div class="col-2">
             <p>氏名</p>
          </div>
          <div class="d-flex flex-row">
            <div class="mr-3">
              <%= f.text_field :last_name, autofocus: true,placeholder:"#{@customer.last_name}"%>
            </div>
            <div>
              <%= f.text_field :first_name ,autofocus: true ,placeholder:"#{@customer.first_name}"%>
            </div>
          </div>
      </div>

      <div class="row my-4">
          <div class="col-2">
             <p>フリガナ</p>
          </div>
          <div class="d-flex flex-row">
            <div class="mr-3">
              <%= f.text_field :last_name_kana ,autofocus: true ,placeholder:"#{@customer.last_name_kana}"%>
            </div>
            <div>
             <%= f.text_field :first_name_kana ,autofocus: true,placeholder:"#{@customer.first_name_kana}"%>
            </div>
          </div>
      </div>

      <div class="row my-4">
          <div class="col-2">
             <p>郵便番号</p>
          </div>
          <div class="d-flex flex-row">
            <div>
              <%= f.text_field :postal_code ,autofocus: true,placeholder:"#{@customer.postal_code}"%>
            </div>
          </div>
      </div>

      <div class="row my-4">
          <div class="col-2">
             <p>住所</p>
          </div>
          <div class="d-flex flex-row">
              <%= f.text_field :address ,autofocus: true ,class:"form-control pr-5",placeholder:"#{@customer.address}"%>
          </div>
      </div>

      <div class="row my-4">
          <div class="col-2">
             <p>電話番号</p>
          </div>
          <div class="d-flex flex-row">
            <div>
              <%= f.text_field :telephone_number, autofocus: true ,placeholder:"#{@customer.telephone_number}"%>
            </div>
          </div>
      </div>

      <div class="row my-4">
          <div class="col-2">
             <p>メールアドレス</p>
          </div>
          <div class="d-flex flex-row">
            <div>
             <%= f.text_field :email ,autofocus: true ,placeholder:"#{@customer.email}"%>
            </div>
          </div>
      </div>

      <div class="row my-4">
          <div class="col-2">
             <p class="my-2">会員ステータス</p>
          </div>
          <div class="d-flex flex-row">
            <div class="mr-3">
              <%= f.radio_button :is_active,"有効" %><span>有効</span>
            </div>
            <div>
             <%= f.radio_button :is_active, "退会" %><span>退会</span>
            </div>
          </div>
      </div>

      <div class="row">
          <div class="col-2">
          </div>
          <div class="d-flex flex-row">
            <div class="mr-3">
               <%= f.submit "変更を保存" ,class:"btn btn-success my-3"%>
               <% end %>
            </div>
          </div>
      </div>
</div>