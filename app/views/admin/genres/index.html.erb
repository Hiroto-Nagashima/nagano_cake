<div class="container my-5">
  <div class="row my-3">
    <h4>ジャンル一覧・追加</h4>
  </div>
  <div class="row my-5">
      <div class="col-2">
        <p>ジャンル名</p>
      </div>
       <div class="col-10">
      <%= form_with model:@genre, url:admin_genres_path,local:true do |f|%>
        <%= f.text_field :name ,placeholder:"ジャンル名"%>
        <%= f.submit "新規登録",class:"btn btn-success btn-sm text-white text-center"%>
      <% end %>
      </div>
  </div>
  <div class="row my-5">
    <dic class="col-4">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <% @genres.each do |genre|%>
      <tr>
        <th><%=genre.name%></th><td><%= link_to "編集する" ,edit_admin_genre_path(genre.id) ,class:"btn btn-success btn-sm text-white text-center ml-5"%></td>
      </tr>
      <% end %>
    </table>
    </dic>
  </div>
</div>

