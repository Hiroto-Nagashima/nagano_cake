<div class="container">
   <div class="row my-5">
     <h4>注文履歴一覧</h4>
   </div>
    <div class="row mx-auto">

      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th >購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td> <%= order.created_at %></td>
              <td><%= order.customer.last_name%><%= order.customer.first_name%></td>
              <td><%= order. %></td>
              <td><%= customer.is_active %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers%>
   </div>
 </div>
