 <div class="container">
   <div class="row my-4">
     <div class="col">
         <h4>商品一覧</h4>
     </div>
     <div class="col offset-md-11">
         <%= link_to new_admin_item_path do%>
         <i class="btn fas fa-plus Regular shadow rounded-circle"></i>
         <% end %>
     </div>
   </div>
    <div class="row mx-auto">
     
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th >商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td> <%= item.id %></td>
              <td><%= link_to "#{item.name}" , admin_item_path(item.id)%></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_active%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
   </div>
 </div>
