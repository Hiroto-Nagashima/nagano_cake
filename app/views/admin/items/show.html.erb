<div class="container">
  <div class="row mt-5">
    <h4>商品詳細</h4>
  </div>
  <div class="row">
    <div class ="col-4 my-5 pt-5">
      <%= attachment_image_tag @item, :image, format: 'jpeg',size: "300x300"%>
    </div>
    <div class ="col-7 my-5 pt-5 offset-md-1">
      <table class="table">
        <tr><th>商品名</th><td><%=@item.name%></td></tr>
        <tr><th>商品説明</th><td><%=@item.introduction%></td></tr>
        <tr><th>ジャンル</th><td><%=@item.genre.name%></td></tr>
        <tr><th>税込価格</br>（税抜き価格）</th><td><%=(@item.price*1.1).floor%>(<%=@item.price%>)</td></tr>
        <tr><th>販売ステータス</th><td><%=@item.is_active%></td></tr>
      </table>
      <div class="row-">
        <%= link_to "編集する" , edit_admin_item_path ,class:"btn btn-success btn-sm text-white text-center" %>
      </div>
    </div>
  </div>

</div>