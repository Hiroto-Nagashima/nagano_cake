<div class="container">
  <div class="row mt-5">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
      <table class="table">

        <tr><th>購入者</th><td><%=@order.name%></td></tr>
        <tr><th>注文日</th><td><%=@order.created_at%></td></tr>
        <tr><th>配送先</th><td><%=@order.address%></td></tr>
        <tr><th>支払い方法</th><td><%=@order.payment_method%></td></tr>
        <%= form_with model:@order, url:admin_order_path,method: :patch,local:true do |f| %>
            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :status, [['入金待ち','入金待ち' ], ['入金確認', '入金確認'],['製作中', '製作中'],['発送準備中', '発送準備中'],['発送済み', '発送済み']] %></td>
              <td><%= f.submit "更新" ,class:"btn btn-success"%></td>
            </tr>
        <% end %>
        </table>
    </div>
    <div class="row mt-4">
        <div class="col-7">
      　 <table class="table">
            <thead class="thead-light">
              <tr>
                <th>商品名</th>
                <th >単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
                <th>製作ステータス</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
                <%@order.order_items.each do |order_item|%>
                <tr>
                  <td><%= order_item.item.name %></td>
                  <td><%= (order_item.price*1.1).floor%></td>
                  <td><%= order_item.amount %></td>
                  <td><%= (order_item.amount*order_item.price*1.1).floor %></td>
                  <%= form_with model:order_item ,url:admin_order_detail_path(order_item.id) ,method: :patch,local:true do |f| %>
                  <td><%= f.select :status,[['製作不可','製作不可'], ['製作待ち','製作待ち'],['製作中', '製作中'],['製作完了','製作完了']]%></td>
                  <td><%= f.submit "更新" ,class:"btn btn-success"%></td>
                </tr>
                <% end %>
                <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-4 offset-md-1">
          <table class="table">
              <tr><th>商品合計</th><td><%=(@order.total_price*1.1).floor%></td></tr>
              <tr><th>送料</th><td><%=@order.shopping_fee%></td></tr>
              <tr><th>請求金額合計</th><td><%=(@order.total_price*1.1+@order.shopping_fee).floor%></td></tr>
          </table>

        </div>
     </div>

</div>