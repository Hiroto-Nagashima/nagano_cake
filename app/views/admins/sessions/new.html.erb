<div class="container my-5 mx-5 mx-auto">
    <div class="row my-5 mx-5">
       <h4>管理者ログイン</h4>
    </div>
    
     <div class="row w-75 mx-auto my-4">
       <div class="col-3 mr-0">
          <p>メールアドレス</p>
       </div>
       <div class="col-7">
          <%= form_with model:resource, url:admin_session_path, local: true do |f| %>
          <%= f.text_field :email, autofocus: true,class:"form-control",autocomplete: "email" %>
       </div>
     </div>
     
     <div class="row w-75 mx-auto my-5">
       <div class="col-3 mr-0">
         <p>パスワード</p>
       </div>
       <div class="col-7">
          <%= f.password_field :password,class:"form-control", autocomplete: "current-password" %>
       </div>
      </div>
       <div class="row">
         <div class="col-4 mx-auto">
            <%= f.submit "ログイン" ,class:"btn btn-primary"%>
            <% end %>
         </div>
       </div>
   
</div>
