<div class="container my-5 mx-auto">
    <div class="row my-3">
       <h2>新規会員登録</h2>
    </div>

    <%= form_with model:resource, url:customer_registration_path, local: true do |f| %>
     <div class="row my-4">
       <div class="col-3">
          <p>名前</p>
       </div>
       <div class ="d-flex flex-row">
         <div>
            (姓)
         </div>
         <div>
            <%= f.text_field :last_name, autofocus: true %>
         </div>
         <div>
            (名)
         </div>
         <div>
            <%= f.text_field :first_name, autofocus: true %>
         </div>
       </div>
     </div>

     <div class="row my-4">
       <div class="col-3">
          <p>フリガナ</p>
       </div>
       <div class="d-flex flex-row">
         <div>
           (セイ)
         </div>
         <div>
           <%= f.text_field :last_name_kana, autofocus: true %>
         </div>
         <div>
            (メイ)
         </div>
         <div>
           <%= f.text_field :first_name_kana, autofocus: true %>
         </div>
       </div>
     </div>

     <div class="row my-4">
       <div class="col-3 mr-0">
          <p>メールアドレス</p>
       </div>
       <div class="col-7">
          <%= f.text_field :email, autofocus: true,autocomplete: "email" %>
       </div>
     </div>

     <div class="row my-4">
       <div class="col-3 mr-0">
          <p>郵便番号</p>
       </div>
       <div class="col-7">
          <%= f.text_field :postal_code, autofocus: true %>
       </div>
     </div>

     <div class="row my-4">
       <div class="col-3 mr-0">
          <p>住所</p>
       </div>
       <div class="col-7">
          <%= f.text_field :address, autofocus: true,class:"form-control",autocomplete: "address" %>
       </div>
     </div>

     <div class="row my-4">
       <div class="col-3 mr-0">
          <p>電話番号(ハイフンなし)</p>
       </div>
       <div class="col-7">
          <%= f.text_field :telephone_number, autofocus: true,autocomplete: "email" %>
       </div>
     </div>

     <div class="row my-3">
       <div class="col-3 mr-0">
         <p>パスワード(6文字以上)</p>
       </div>
       <div class="col-7">
          <%= f.password_field :password %>
       </div>
      </div>

      <div class="row my-3">
       <div class="col-3 mr-0">
         <p>パスワード(確認用)</p>
       </div>
       <div class="col-7">
          <%= f.password_field :password_comformation%>
       </div>
      </div>

       <div class="row">
         <div class="col-4 mx-auto">
            <%= f.submit "新規作成" ,class:"btn btn-success"%>
            <% end %>
         </div>
       </div>

       <div class="row mt-5 mb-2 mx-5">
          <h4>既に登録済みの方</h4>
       </div>
       <div class="row mx-5">
         <div class="col-5 offset-md-3">
            <p><%=link_to"こちら",new_customer_session_path %>から会員登録を行ってください</p>
         </div>
       </div>

</div>



