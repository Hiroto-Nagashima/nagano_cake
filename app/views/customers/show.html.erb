<div class="container">
  <div class="row">
    <%= link_to "編集する",edit_customers_path,class:"btn btn-primary "%>
  </div>
  <div class="row">
       <div class="col-4 offset-md-3 ">
          <table class="table table-bordered">
            <tr>
              <th>名前</th><td><%=current_customer.last_name%><%=current_customer.first_name%></td>
            </tr>
            <tr>
              <th>カナ</th><td><%=current_customer.last_name_kana%><%=current_customer.first_name_kana%></td>
            </tr>
            <tr>
              <th>郵便番号</th><td><%=current_customer.postal_code%></td>
            </tr>
            <tr>
              <th>住所</th><td><%=current_customer.address%></td>
            </tr>
            <tr>
              <th>電話番号</th><td><%=current_customer.telephone_number%></td>
            </tr>
            <tr>
              <th>メールアドレス</th><td><%=current_customer.email%></td>
            </tr>
          </table>
        </div>

        </div>
        <div class="row">
          <div class="col">
            <p>配送先</p>
          </div>
          <div class="col">
            <%= link_to "一覧を見る",addresses_path,class:"btn btn-primary "%>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <p>注文履歴</p>
          </div>
          <div class="col">
            <%= link_to "一覧を見る",orders_path,class:"btn btn-primary "%>
          </div>
        </div>
      </div>

