<div class="container">
  
   <div class="row my-4">
        <h2>商品紹介</h2>
      </div>
      <% @items.each do |item|%>
        <div class="top-items">
          <div class="item-photo">
            <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, format: 'jpeg',size: "250x200"%>
            <%end%>
          </div>
          <div class="item-name">
            <%=item.name%>
          </div>
          <div class="item-price">
            <span>￥</span><%=item.price%>
          </div>
        </div>
        <%end%>
    </div>
</div>