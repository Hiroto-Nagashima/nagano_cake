<div class="container">
    <div class="row my-4">
        <%= form_with model:@order,url:orders_confirm_path,method: :post, local: true do |f| %>
        <h2>注文情報入力</h2>
    </div>
    <div class="row my-4">
        <div class="col">
            <h4>支払い情報</h4>
        </div>
    </div>
    <div class="row">
        <div class = "col-2 offset-md-1">
            <%= f.radio_button :payment_method, 'クレジットカード'%>
            <%= f.label :payment_method, 'クレジットカード'%>
            <%= f.radio_button :payment_method, '銀行振り込み'%>
            <%= f.label :payment_method, '銀行振り込み'%>
        </div>
    </div>

    <div class="row my-4">
        <div class="col">
            <h4>お届け先</h4>
        </div>
    </div>

    <div class="row my-4">
        <div class = "col-8 offset-md-1">
            <div class="row">
                <div class="col-10">
                    <%= f.radio_button :selected_address,  0 %>
                    <%= f.label :selected_address, 'ご自身の住所'%>
                </div>
                <div class="col-10 mt-2 offset-md-1">
                    <%= @customer.address %>
                </div>
            </div>

            <div class="row my-4">
                <div class="col-10">
                    <%= f.radio_button :selected_address,  1%>
                    <%= f.label :selected_address, '登録済住所から選択'%>
                </div>
                <div class="col-10 mt-2 offset-md-1 ">
                     <%= collection_select :ord, :registered_address,  @addresses ,:id, :personal_information ,include_blank: "--選択して下さい--",class:"form-control"%>
                                            <!--name属性　　addressesの中にあるレコードのidをvalue属性にあてはめる　:personal_informationは実際に表示されるもの　-->
                </div>
            </div>

            <div class="row my-4">
                <div class="col-10">
                    <%= f.radio_button :selected_address, 2%>
                    <%= f.label :selected_address, '新しい住所'%>
                </div>
            </div>
        </div>
        <div class="row w-75 mx-auto mt-1">
             <div class="col-4 mr-0">
                <p>郵便番号（ハイフンなし）</p>
             </div>
             <div class="col-7">
                <%= f.text_field :postal_code, autofocus: true %>
             </div>
             <div class="col-4 mr-0 mb-1">
                <p>住所</p>
             </div>
             <div class="col-7 mb-1">
                <%= f.text_field :address, autofocus: true,class:"form-control"%>
             </div>
             <div class="col-4 mr-0">
                <p>宛名</p>
             </div>
             <div class="col-7">
                <%= f.text_field :name, autofocus: true %>
             </div>
         </div>
    </div>
 </div>

 <div class="row ">
   <div class="col-md-2  mx-auto">
    <%= f.submit "確認画面へ進む" ,class:"btn btn-success my-3"%>
    <% end %>
   </div>
 </div>
