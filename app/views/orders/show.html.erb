<div class="container">
   <div class="row my-4">
     <div class="col-8">
         <h4>注文情報確認</h4>
     </div>
   </div>
    <div class="row mx-auto">
      <div class="col-6">
          <table class="table table-bordered">
              <tr>
                <th>注文日</th><td><%= @order.created_at %></td>
              </tr>
              <tr>
                <th>配送先</th>
                <td>
                  〒<%= @order.postal_code %>
                  <%= @order.address %>
                  <%= @order.name %>
                </td>
              </tr>
              <tr>
                <th>支払い方法</th><td> <%= @order.payment_method %></td>
              </tr>
              <tr>
                <th>ステータス</th><td> <%= @order.status %></td>
              </tr>
          </table>
      </div>

       <div class="col-4 offset-md-2 ">
          <table class="table table-bordered">
            <tr>
              <th>商品合計</th><td><%= @order.total_price - @order.shopping_fee %></td>
            </tr>
            <tr>
              <th>配送料</th><td><%=@order.shopping_fee%></td>
            </tr>
            <tr>
              <th>請求額</th><td><%= @order.total_price%></td>
            </tr>
          </table>
        </div>
    </div>

    <div class="row mx-auto my-5">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

     <% @order.order_items.each do |order_item| %>
          <tbody>
              <tr>
                <td><%= order_item.item.name %></td>
                <td><%= (order_item.price*1.1).floor %></td>
                <td> <%= order_item.amount %></td>
                <td><%= (order_item.price*order_item.amount*1.1).floor %></td>
              </tr>
          </tbody>
     <%end %>
        </table>
     </div>
</div>
